<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.klapheck.priesthoodordinances"
    android:versionCode="6"
    android:versionName="2.2" >
    <!-- prior versionName = 2.1 -->
    <!-- Version information has been updated in preparation for the next release!!! -->
    
    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity 
            android:name="MainMenu" 
            android:label="@string/app_name"
            android:uiOptions="splitActionBarWhenNarrow"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="Ordinance" android:label="@string/app_name">
          	<intent-filter>
                <action android:name="com.klapheck.priesthoodordinances.ORDINANCE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="Prefs" android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.klapheck.priesthoodordinances.Prefs" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="BlessingsInGeneral" android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.klapheck.priesthoodordinances.BlessingsInGeneral" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="AboutApp" android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.klapheck.priesthoodordinances.AboutApp" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="OpenSource" android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.klapheck.priesthoodordinances.OpenSource" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>